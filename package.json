{
  "name": "aletheia-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prebuild": "node scripts/log-env.js",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "start:custom": "NODE_ENV=production node server.js",
    "start:windows": "set NODE_ENV=production&& node server.js",
    "lint": "next lint",
    "debug": "NODE_ENV=development node --inspect server.js",
    "debug:windows": "set NODE_ENV=development&& node --inspect server.js",
    "logs": "node scripts/log-env.js",
    "render:debug": "NODE_ENV=production node server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:build": "jest tests/build/",
    "test:seo": "jest tests/seo/",
    "test:all": "jest"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@tsparticles/engine": "^3.8.1",
    "@tsparticles/react": "^3.0.0",
    "autoprefixer": "^10.0.1",
    "framer-motion": "^10.18.0",
    "lucide-react": "^0.294.0",
    "next": "14.2.30",
    "postcss": "^8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.48.2",
    "react-ink": "^6.5.4",
    "react-intersection-observer": "^9.16.0",
    "react-type-animation": "^3.2.0",
    "tailwindcss": "^3.4.17",
    "tsparticles": "^3.8.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@types/node": "^20.19.1",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "cheerio": "^1.1.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.30",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "typescript": "^5"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "collectCoverageFrom": [
      "app/**/*.{js,jsx,ts,tsx}",
      "components/**/*.{js,jsx,ts,tsx}",
      "lib/**/*.{js,jsx,ts,tsx}",
      "!**/*.d.ts",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.test.ts",
      "**/tests/**/*.test.jsx",
      "**/tests/**/*.test.tsx"
    ]
  }
}
